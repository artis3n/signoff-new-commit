{
  "name": "signoff-new-commit",
  "version": "0.2.0",
  "description": "A GitHub Action to merge a PR after signing off on new commits without wiping previous reviews.",
  "main": "lib/main.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "clean": "rm -rf node_modules lib/*",
    "all": "npm run build && npm run format-check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artis3n/signoff-new-commit.git"
  },
  "keywords": [
    "github-action",
    "action",
    "pull-request",
    "pr",
    "commit",
    "signoff"
  ],
  "author": "Artis3n <dev@artis3nal.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artis3n/signoff-new-commit/issues"
  },
  "homepage": "https://github.com/artis3n/signoff-new-commit#readme",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.14",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nock": "^11.9.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "git add"
    ]
  }
}
